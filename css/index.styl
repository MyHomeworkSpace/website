---
---
body
	position: relative

.landing>.container-fluid, .header-row, .landing-text
	height: 100%

@media only screen and (min-width: 540px)
	.header-row
		width: 80%
		margin: auto

@media only screen and (max-width: 539.9999px)
	.header-row
		width: 100%

@media only screen and (max-width: 980px)
	.landing-graphic
		display: none

.landing
	background: #f5f7fa
	padding-top: 4rem
	padding-bottom: 5rem
	overflow: hidden

	.landing-text
		padding-top: 0.5rem
		padding-left: 1rem

		.landing-title
			font-size: 3.5rem
			margin-bottom: 0.75rem

			em
				position: relative

				.landing-title-underline
					display: block
					background: url(/img/underline.svg)
					background-size: contain
					background-repeat: no-repeat
					width: 100%
					height: 0.75rem
					position: absolute
					top: 3.5rem
					left: 0

		.landing-subtitle
			font-size: 1.5rem

		.btn
			background: #3a98d4
			border: none
			font-size: 1.25rem
			padding: 0.75rem 1.5rem

		.btn:hover
			background: #4C63B6

		.btn:active
			background: #35469C

	.landing-graphic
		position: relative
		height: 16rem
		overflow-y: hidden

		.homeworkItem
			cursor: default
			background: white
			border-radius: 3px
			border: solid 1px #cbcccd
			border-left-width: 4px
			border-top-left-radius: 0
			border-bottom-left-radius: 0
			box-shadow: 0 1px 3px hsla(0, 0%, 0%, 0.2)
			font-size: 14px
			padding: 10px
			padding-right: 30px
			margin-bottom: 8px
			position: relative
			transition: all 0.2s

			.homeworkItemName
				font-size: 1rem

				.homeworkItemNamePrefix
					color: white
					padding: 2px

			.homeworkItemDetails
				.homeworkItemDetailsClassDot
					display: inline-block
					width: 12px
					height: 12px
					border-radius: 100%
					margin-right: 2px

	.landing-graphic:after
		content: " "
		display: block
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		background-image: linear-gradient(180deg, transparent 50%, #f5f7fa 100%)

#otherfeatures, #bottom-get-started
	background-color: #333
	color: white
	text-align: center

.feature-marquee
	width: 100%
	padding: 2rem 0
	overflow: hidden

.mini-feature, .fine-print
	opacity: 0.7
	transition: opacity .5s

.mini-feature
	padding-right: 90px !important

.mini-feature:hover, .fine-print:hover
	opacity: 1

#bottom-get-started
	padding-top: 5rem
	padding-bottom: 10rem

.graphic-time-period
	text-align: center

.planner-feature
	background-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%)
	color: white

.hw-feature
	background-image: linear-gradient(75deg, #2af598 0%, #009efd 100%)
	color: white

.schedule-feature
	background-image: linear-gradient(120deg, #f093fb 0%, #f5576c 100%)
	color: white

.cloud-feature
	background-image: linear-gradient(-215deg, #30cfd0 0%, #330867 100%)
	color: white

.feature
	height: 20rem
	min-height: 250px

.vertical-center
	display: flex
	flex-direction: column
	justify-content: center
	height: 100%

.fh
	height: 100%

.giant-icon
	font-size: 200px

.tar
	text-align: right

@media only screen and (max-width: 768px)
	.icon-holder
		display: none